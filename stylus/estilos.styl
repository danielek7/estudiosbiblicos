@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px 
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0 
//buttons
.button-menu
	color gris_oscuro
	left .5em
	margin-top -.6em 
	position absolute
	top 50%
//oocss clasess
.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white
	font-size 1.2em 
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black, .3)
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none 
.relative
	position relative
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
	.state
		background rojo
		border-radius 5px
		height 5px
		width 30%
		position relative
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
.header
	height 3.5em
	/*a
		display none*/
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.sermon
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	width 8rem
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing
	// display none
	&.small
		width 20em
		margin 0 auto
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search-icon
	color gris_claro
	left .5em
	position absolute
	top .8em
.close-icon
	color gris_claro
	position absolute
	right .5em
	top .5 em
	font-size 1.2em
.playlist
	display none
.logo
	display none
.search
	margin-right 1em
.playlist
	display none
	width 22em
	padding 0 2em
	border-left 1px solid gris_claro
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size .8em
.isotipo
	width 300px
.logo
	display none
	background white
	padding 1.3em 0
	overflow hidden
.avatar
	width 38px
	height 38px
.username
	color gris_claro
	position relative
	top 9px
	margin-left .5em
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em
.user
	display flex
	margin-right 3em

@media screen and (min-width:480px)
	.sermon
		&:nth-child(even)
			margin-right 1em
	.image
		img 
			width 100%
			height auto
	.playing
		&.medium
			width auto
//tabletas de baja resolucion nexus 7
@media screen and (min-width:960px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 59em
			overflow hidden
	.menu
		display block
		overflow hidden
		background gris_mas_claro
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				display block
				padding 1em
				text-transform uppercase
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
	.estudio
		width 32.5em
		float left
		.description
			display none
	.header
		height auto
		border none
		.title
			display none
	.logo
	.playlist
		display block

@media screen and (min-width:1000px)
	.playing
		&.large
			width 62.5em
	.user
		margin-right 0

			
	